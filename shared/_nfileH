#!/bin/sh
echo $0

if [ ! -d /zTools/zPrivateConfig ] && [ -d /static ]
then
	BASE=/static
fi

if [ ! -d /static ] && [ -d /zTools/zPrivateConfig ]
then
	BASE=/zTools/zPrivateConfig
fi

if [ -d /zTools/zShared ]
then
	BASE=/zTools/zShared
fi

if [  -d /static ] && [ ! -d /zTools/zShared ] && [ ! -d /zTools/zPrivateConfig ]
then
	BASE=/static
fi

if [ ! -d /static ] && [ -d /zTools/zShared ] && [ ! -d /zTools/zPrivateConfig ]
then
	BASE=/zTools/zShared
fi

if [ ! -d /static ] && [ ! -d /zTools/zShared ] && [ -d /zTools/zPrivateConfig ]
then
	BASE=/zTools/zPrivateConfig
fi

MYNAME=$(uname -n)
if [ -d /volume12/zTools/Sync${MYNAME}/zTools/zSyno ]
then
	BASE=/volume12/zTools/Sync${MYNAME}/zTools/zSyno
fi

echo "BASE=${BASE}"
if [ -f ${BASE}/secrets/.${MYNAME} ]
then
  . ${BASE}/secrets/.${MYNAME}
else
if [ -f ${BASE}/secrets/.ntfyenvH ]
then
  . ${BASE}/secrets/.ntfyenvH
else
  if [ -z ${DUFUS+x} ]
  then
    mkdir -p ${BASE}/secrets
      echo "Create ${BASE}/secrets/.ntfyenvH"
    echo "Please update contents and rerun"
    exit 1
    fi
  fi
fi

SCRIPT=$1
MSG=$2
FILETOSEND=$3
MYNAME=`uname -n`

MSG=/var/tmp/${THIS_SCRIPT}.msg.$$

SUBJECT=" ${MYNAME} - ${SCRIPT}: "



curl \
  -d "${SUBJECT} " \
  ntfy.sh/${DUFUSH}

NAME=$(basename $FILETOSEND)
curl \
  -T ${FILETOSEND} \
  -H "Filename: ${NAME}" \
  ntfy.sh/${DUFUSH}
