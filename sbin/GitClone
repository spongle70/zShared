#!/bin/sh
#
echo "SCRIPT $0 starting"

MYNAME=`uname -n`

ZZ=/zz
REPO='zPublic zShared'
KEYS=

if [ ! -d ${ZPC} ]
then
    mkdir ${ZPC}
fi

REPOSITE=https://mint.nopenso.com/mirror

for i in `ls ${ZZ}`
do
    echo $i
    if [ ! -d ${ZPC}/$i ]
    then
        echo $i
        cd ${ZPC}
        git clone ${REPOSITE}/${i}.git
    fi
done

exit 0
